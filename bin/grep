#!/bin/sh

# Searches for students whose metadata match a pattern.
#
#   -q   prints only NetIDs, not full grep results
#   -u   require a unique NetID result (implies -q)
#

. "$(dirname "$0")/../lib/common.sh"

eval "$(getargs -qu ...)"

cd "$COURSE_DB/students"

search () {
    local patt; patt=$1

    if netid=$(resolve_student "$patt" 2>/dev/null); then
        echo $netid
    else
        egrep -il "$patt" */* |
            sed 's@/.*@@' |
            sort |
            uniq
    fi
}

display () {
    cat
}

